<ClickableTextFieldRoundEmail>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        icon_left: "email"
        # required: True
        mode: "line"

<ClickableTextFieldRoundPassword>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        icon_left: "key-variant"
        # required: True
        mode: "line"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True
My_Layout:
    screen_Mngr: screen_mngr
    ScreenManager:
        id: screen_mngr
        home: home
        Screen:
            id: home
            name: "home"

            MDCard:
                orientation: "vertical"
                padding: 0, "20dp", 0 , "20dp"
                size_hint: .8, .8
                pos_hint: {"center_x": .5, "center_y": .5}
                elevation: 4
                shadow_radius: 6
                shadow_offset: 0, 2
                radius: 20
                spacing: "5dp"

                MDIconButton:
                    icon: "theme-light-dark"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon_size: "30sp"
                    icon_color: "red"
                    #md_bg_color: app.theme_cls.primary_color
                    on_release: app.switch_theme_style()

                MDLabel:
                    text: "SIGN IN"
                    halign: "center"
                    valign: "center"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    bold: True
                    font_style: "H5"

                ClickableTextFieldRoundEmail:
                    hint_text: "Email"
                    size_hint_x: None
                    size_hint: 0.8,0.8
                    pos_hint: {"center_x": .5, "y": .5}

                ClickableTextFieldRoundPassword:
                    size_hint_x: None
                    size_hint: 0.8,0.8
                    hint_text: "Password"
                    pos_hint: {"center_x": .5, "center_y": .5}

                MDRoundFlatButton:
                    text: "Sign In"
                    size_hint: 0.5,0.2
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    text: "OR"
                    halign: "center"
                    valign: "center"
                    bold: True
                    size_hint: 0.5,0.5
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDFlatButton:
                    text: "Join with us"
                    theme_text_color: "Custom"
                    text_color: "orange"
                    size_hint: 0.5,0.2
                    pos_hint: {"center_x": .5, "center_y": .2}
                    on_release: screen_mngr.current = "signup"


        Screen:
            id: signup
            name: "signup"
            MDCard:
                orientation: "vertical"
                padding: 0, "1dp", 0 , "10dp"
                size_hint: .8, .8
                pos_hint: {"center_x": .5, "center_y": .5}
                elevation: 4
                shadow_radius: 6
                shadow_offset: 0, 2
                radius: 20
                spacing: "5dp"

                MDIconButton:
                    icon: "theme-light-dark"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon_size: "30sp"
                    icon_color: "red"
                    #md_bg_color: app.theme_cls.primary_color
                    on_release: app.switch_theme_style()

                MDLabel:
                    text: "SIGN UP"
                    halign: "center"
                    valign: "center"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    bold: True
                    font_style: "H5"

                ClickableTextFieldRoundEmail:
                    hint_text: "Email"
                    size_hint_x: None
                    size_hint: 0.8,0.8
                    pos_hint: {"center_x": .5, "y": .5}
                    text_color_normal: "gray"

                ClickableTextFieldRoundPassword:
                    size_hint_x: None
                    size_hint: 0.8,0.8
                    hint_text: "Password"
                    pos_hint: {"center_x": .5, "center_y": .5}

                ClickableTextFieldRoundPassword:
                    size_hint_x: None
                    size_hint: 0.8,0.8
                    hint_text: "Confirm Password"
                    pos_hint: {"center_x": .5, "center_y": .5}

                MDRoundFlatButton:
                    text: "Sign up"
                    size_hint: 0.5,0.2
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    text: "Have an account ?"
                    halign: "center"
                    valign: "center"
                    size_hint: 0.8,0.6
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDFlatButton:
                    text: "Sign in"
                    theme_text_color: "Custom"
                    text_color: "orange"
                    size_hint: 0.5,0.2
                    pos_hint: {"center_x": .5, "center_y": .2}
                    on_release: screen_mngr.current = "home"

